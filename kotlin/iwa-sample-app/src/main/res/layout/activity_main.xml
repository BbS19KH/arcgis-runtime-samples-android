<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.esri.android.samples.iwasampleapp.MainActivity">

    <EditText
            android:id="@+id/portalUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter portal url"
            android:inputType="textUri"
            android:text="https://portaliwads.ags.esri.com/gis"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="40dp"
            app:layout_constraintBottom_toTopOf="@id/mapView"
            app:layout_constraintRight_toLeftOf="@id/signinButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    
    <Button
            android:id="@+id/signinButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:layout_marginTop="40dp"
            app:layout_constraintBottom_toTopOf="@id/mapView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/portalUrl"
            app:layout_constraintTop_toTopOf="parent" />

    <!-- MapView -->
    <com.esri.arcgisruntime.mapping.view.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/portalUrl">
    </com.esri.arcgisruntime.mapping.view.MapView>

</android.support.constraint.ConstraintLayout>
